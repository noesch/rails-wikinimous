<div class="container">
  <h2><%= @article.title %></h2>
  <br>
  <p><%= @article.content %></p>
  <br>
  <%= link_to "Edit Article", edit_article_path %>
  <%= link_to "Delete #{@article.title}",
              article_path(@article),
              method: :delete,
              data: { confirm: "Are you sure?" }
  %>
</div>
